    <br><br><br>
    <div class="container">
        <div class="col" style="border: 2px solid #26262e;padding:20px;-webkit-box-shadow: 5px 5px 15px 5px #000000; box-shadow: 5px 5px 15px 5px #000000;">
            <br>
            <h1 style ="margin-bottom:20px">AGREGAR VENTA</h1>

            form(id="form-agregar-producto" action="/res/sales/create" method="post")
                <select class="form-select" style="margin:20px" aria-label="Default select example" name="idU">
                 each user in users
                    option(value=user._id) #{user.nombre}
                 </select>

                <select class="form-select" style="margin:20px" aria-label="Default select example" name="idP">
                 each product in products
                    option(value=product._id) #{product.nombre}
                </select>

                input(type="submit" class="btn btn-primary" style="margin:20px" value="Guardar")  
            </form>

           
            <br>
        </div>
    </div>
    <br><br>
</body>

